<p style="color: green"><%= notice %></p>

<% content_for :title, "Locations" %>

<h1>Locations</h1>

<div id="locations">
  <% @locations.each do |location| %>
    <div>
      <h3><%= location.name %></h3>

      <p><%= location.description %></p>
      <p><%= link_to "Show this location", location %></p>
    </div>
  <% end %>
</div>

<%= link_to "New location", new_location_path %>
